{
  "name": "wow-campus",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "dev:build": "npm run build && npm run preview",
    "dev:sandbox": "wrangler pages dev dist --d1=w-campus-production --local --ip 0.0.0.0 --port 3000",
    "dev:full": "npm run build && npm run dev:sandbox",
    "build": "node --require ./setup-polyfills.cjs ./node_modules/.bin/vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name w-campus",
    "deploy:pages": "npm run build && wrangler pages deploy dist --project-name w-campus --compatibility-date=2025-08-25",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "setup": "node local-dev-setup.cjs",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "test:health": "curl -I http://localhost:3000/health",
    "db:migrate:local": "wrangler d1 migrations apply w-campus-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply w-campus-production",
    "db:seed": "wrangler d1 execute w-campus-production --local --file=./test-accounts.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute w-campus-production --local",
    "db:console:prod": "wrangler d1 execute w-campus-production",
    "db:backup": "wrangler d1 export w-campus-production --output=./backup-$(date +%Y%m%d-%H%M%S).sql",
    "security:check": "echo 'Running security checks...' && npm audit",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "hono": "^4.9.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250927.0",
    "@hono/vite-build": "^1.7.0",
    "@hono/vite-dev-server": "^0.20.1",
    "@types/node": "^20.14.0",
    "better-sqlite3": "^12.2.0",
    "pm2": "^6.0.10",
    "typescript": "^5.5.0",
    "vite": "^6.3.5",
    "wrangler": "^4.34.0"
  }
}
