    <script>
        // FAQ 토글 기능
        function toggleFAQ(button) {
            const content = button.nextElementSibling;
            const icon = button.querySelector('i');
            
            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                icon.classList.add('rotate-180');
            } else {
                content.classList.add('hidden');
                icon.classList.remove('rotate-180');
            }
        }

        // 카테고리 필터링
        function filterFAQ(category) {
            const faqs = document.querySelectorAll('.faq-item');
            const buttons = document.querySelectorAll('.faq-category-btn');
            
            // 버튼 스타일 업데이트
            buttons.forEach(btn => {
                btn.classList.remove('bg-wowcampus-blue', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700');
            });
            
            // 선택된 버튼 스타일 적용
            event.target.classList.remove('bg-gray-200', 'text-gray-700');
            event.target.classList.add('bg-wowcampus-blue', 'text-white');
            
            // FAQ 필터링
            faqs.forEach(faq => {
                if (category === 'all' || faq.getAttribute('data-category') === category) {
                    faq.style.display = 'block';
                } else {
                    faq.style.display = 'none';
                }
            });
        }

        // 검색 기능
        document.getElementById('faq-search').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const faqs = document.querySelectorAll('.faq-item');
            
            faqs.forEach(faq => {
                const title = faq.querySelector('h3').textContent.toLowerCase();
                const content = faq.querySelector('.faq-content').textContent.toLowerCase();
                
                if (title.includes(searchTerm) || content.includes(searchTerm)) {
                    faq.style.display = 'block';
                } else {
                    faq.style.display = 'none';
                }
            });
        });
    </script>
